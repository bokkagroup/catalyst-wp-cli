server {
    listen                      80;
    {{#if ssl}}
    listen                      443 ssl;
    {{/if}}

    server_name                 {{#if multisite}}*.{{project_name}}.test{{/if}} {{project_name}}.test;
    root                        /srv/www/{{project_name}}/htdocs;
    include                     /etc/nginx/nginx-wp-common.conf;

    {{#if ssl}}
    #ssl    on;
    #ssl_certificate             /srv/www/{{project_name}}/provision/{{project_name}}.test.cert;
    #ssl_certificate_key         /srv/www/{{project_name}}/provision/{{project_name}}.test.key;
    {{/if}}
}
